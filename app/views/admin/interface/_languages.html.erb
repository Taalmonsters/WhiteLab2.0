<div id="language" class="row">
	<div class="col-xs-12">
		<div class="visible-xs" style="width: 100%; height: 10px;"></div>
		<h3 class="padding-bottom-10"><%= t(:'page_titles.keys.languages').capitalize %></h3>
		<div class="row">
			<%= form_tag('/admin/interface/language', :method => :post) do %>
				<div class="form-group col-xs-12 col-sm-8 col-md-6">
					<label for="default" class="padding-bottom-10"><%= t(:"instructions.keys.select_default_language") %></label>
					<div class="selectpicker">
						<%= select_tag(:default, options_for_select(@available_languages, [I18n.default_locale.to_s])) %>
						<%= submit_tag(t(:"button_labels.keys.select").capitalize, :class => "btn btn-xs btn-primary") %>
					</div>
				</div>
			<% end %>
		</div>
		<div class="row">
			<%= form_tag('/admin/interface/language', :method => :post) do %>
				<div class="form-group col-xs-12 col-sm-8 col-md-6">
					<label for="add" class="padding-bottom-10"><%= t(:"instructions.keys.add_new_language") %></label>
					<div class="selectpicker">
						<%= select_tag(:add, options_for_select(@all_languages.sort)) %>
						<%= submit_tag(t(:"button_labels.keys.add").capitalize, :class => "btn btn-xs btn-primary") %>
					</div>
				</div>
			<% end %>
		</div>
		<% if @available_languages.length > 1 %>
			<div class="row">
				<%= form_tag('/admin/interface/language', :method => :post) do %>
					<div class="form-group col-xs-12 col-sm-8 col-md-6">
						<label for="remove" class="padding-bottom-10"><%= t(:"instructions.keys.remove_language") %></label>
						<div class="selectpicker">
							<%= select_tag(:remove, options_for_select(@available_languages)) %>
						<%= submit_tag(t(:"button_labels.keys.remove").capitalize, :class => "btn btn-xs btn-primary") %>
						</div>
					</div>
				<% end %>
			</div>
		<% end %>
	</div>
</div>
